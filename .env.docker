# Docker Environment Variables
# Copy this to .env.local and modify as needed

# Database Configuration
POSTGRES_DB=bible_study
POSTGRES_USER=bible_user
POSTGRES_PASSWORD=bible_password_secure_123

# Backend Configuration
NODE_ENV=production
PORT=3001
DATABASE_URL=postgresql://bible_user:bible_password_secure_123@postgres:5432/bible_study

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here_change_in_production_docker
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_in_production_docker
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000