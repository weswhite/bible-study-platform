# Environment Variables Template
# Copy this to .env.local and modify with your actual values

# Database Configuration
POSTGRES_DB=bible_study
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here

# Backend Configuration
NODE_ENV=development
PORT=3001
DATABASE_URL=postgresql://your_db_user:your_secure_password_here@localhost:5432/bible_study

# JWT Configuration - GENERATE SECURE SECRETS!
JWT_ACCESS_SECRET=generate_a_secure_random_string_here
JWT_REFRESH_SECRET=generate_another_secure_random_string_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000